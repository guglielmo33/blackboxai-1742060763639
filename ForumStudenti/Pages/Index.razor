@page "/"

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="text-center">
        <h1 class="text-4xl tracking-tight font-extrabold text-gray-900 sm:text-5xl md:text-6xl">
            <span class="block">Benvenuto nel</span>
            <span class="block text-indigo-600">Forum Studenti</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
            Una piattaforma per condividere materiali didattici e discutere argomenti di studio con altri studenti.
        </p>
        <div class="mt-5 max-w-md mx-auto sm:flex sm:justify-center md:mt-8">
            <div class="rounded-md shadow">
                <NavLink href="forum" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 md:py-4 md:text-lg md:px-10">
                    Vai al Forum
                </NavLink>
            </div>
            <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
                <NavLink href="fileshare" class="w-full flex items-center justify-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-indigo-600 bg-white hover:bg-gray-50 md:py-4 md:text-lg md:px-10">
                    Esplora i File
                </NavLink>
            </div>
        </div>
    </div>

    <!-- Features Section -->
    <div class="py-12 bg-white mt-16 rounded-lg shadow-lg">
        <div class="max-w-xl mx-auto px-4 sm:px-6 lg:max-w-7xl lg:px-8">
            <h2 class="sr-only">Le nostre caratteristiche</h2>
            <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
                <div class="pt-6">
                    <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8">
                        <div class="-mt-6">
                            <div>
                                <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                                    <i class="fas fa-comments text-white text-2xl"></i>
                                </span>
                            </div>
                            <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight">Forum Interattivo</h3>
                            <p class="mt-5 text-base text-gray-500">
                                Partecipa alle discussioni, fai domande e condividi le tue conoscenze con altri studenti.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="pt-6">
                    <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8">
                        <div class="-mt-6">
                            <div>
                                <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                                    <i class="fas fa-folder-open text-white text-2xl"></i>
                                </span>
                            </div>
                            <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight">Condivisione File</h3>
                            <p class="mt-5 text-base text-gray-500">
                                Accedi e condividi materiali didattici, appunti e risorse di studio.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="pt-6">
                    <div class="flow-root bg-gray-50 rounded-lg px-6 pb-8">
                        <div class="-mt-6">
                            <div>
                                <span class="inline-flex items-center justify-center p-3 bg-indigo-500 rounded-md shadow-lg">
                                    <i class="fas fa-users text-white text-2xl"></i>
                                </span>
                            </div>
                            <h3 class="mt-8 text-lg font-medium text-gray-900 tracking-tight">Community</h3>
                            <p class="mt-5 text-base text-gray-500">
                                Unisciti a una community di studenti che condividono i tuoi interessi e obiettivi.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
