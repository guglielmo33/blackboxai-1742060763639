@using ForumStudenti.Shared

<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(ForumStudenti.Shared.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(ForumStudenti.Shared.MainLayout)">
            <div class="flex flex-col items-center justify-center min-h-[60vh]">
                <div class="text-6xl text-gray-400 mb-4">
                    <i class="fas fa-search"></i>
                </div>
                <h1 class="text-4xl font-bold text-gray-700 mb-2">Pagina non trovata</h1>
                <p class="text-gray-500 mb-6">La pagina che stai cercando non esiste.</p>
                <a href="" class="bg-indigo-600 text-white px-6 py-3 rounded-md text-sm font-medium hover:bg-indigo-700 transition duration-150">
                    Torna alla Home
                </a>
            </div>
        </LayoutView>
    </NotFound>
</Router>
